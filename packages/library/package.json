  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixhenninger/lab.js.git"
  },
  "homepage": "https://lab.js.org",
  "main": "dist/lab.js",
  "typings": "dist/index.d.ts",
  "dependencies": {
    "@types/common-tags": "^1.8.0",
    "common-tags": "^1.8.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "es2015-proxy": "^0.1.7",
    "es6-promise": "^4.1.0",
    "fast-async": "^7.0.0",
    "file-saver": "^1.3.8",
    "lodash": "^4.17.10",
    "nodent": "^3.2.6",
    "seedrandom": "^3.0.5",
    "shim-keyboard-event-key": "^1.0.2",
    "terser-webpack-plugin": "^4.1.0",
    "ua-parser-js": "^0.7.19",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@types/file-saver": "1.3.0",
    "@types/lodash": "4.14.108",
    "@types/seedrandom": "2.4.27",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "chai": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "fork-ts-checker-webpack-plugin": "^5.1.0",
    "jszip": "^3.1.5",
    "karma": "^4.1.0",
    "karma-babel-preprocessor": "^8.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-requirejs": "^1.1.0",
    "karma-sauce-launcher": "~1.1.0",
    "karma-sinon": "^1.0.5",
    "lodash-webpack-plugin": "^0.11.5",
    "mocha": "^5.1.0",
    "onchange": "^4.0.0",
    "postcss-cli": "^7.1.0",
    "postcss-preset-env": "^6.7.0",
    "requirejs": "^2.3.3",
    "shelljs": "^0.8.2",
    "shx": "^0.3.2",
    "sinon": "^7.0.0",
    "ts-loader": "8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "analyze": "cross-env NODE_ENV=analysis webpack --profile --json > bundleStats.json",
    "build:coverage": "cross-env NODE_ENV=coverage webpack -d",
    "build:development": "webpack --mode=development",
    "build:legacy": "cross-env NODE_ENV=legacy webpack --mode=production",
    "build:production": "webpack --mode=production",
    "build": "yarn run build:development && yarn run build:production && yarn run build:legacy",
    "build:css": "postcss --local-plugins -u postcss-preset-env -o dist/lab.css src/starterkit/lib/lab.css",
    "build:starterkit": "yarn run build && yarn run build:css && node scripts/bundle_starterkit.js",
    "clean": "shx rm -rf dist && shx mkdir dist",
    "lint": "eslint src",
    "prepare": "yarn run build:starterkit",
    "test": "karma start test/_karma/ci.conf.js",
    "test:coverage": "yarn run build:coverage && karma start test/_karma/coverage.conf.js",
    "test:sauce": "karma start test/_karma/sauce.conf.js",
    "test:sauce:legacy": "karma start test/_karma/sauce_legacy.conf.js",
    "watch:js": "onchange 'src/**/*' -- yarn run build"
  }
}
